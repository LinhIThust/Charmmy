<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="10dp" tools:layout_editor_absoluteX="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="MissingConstraints"
                android:id="@+id/ivExpertTab"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleExpert"
                app:layout_constraintTop_toTopOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/ivExpertTab"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameExpert" android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleExpert" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/ivExpertTab"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:id="@+id/tvTopicExpert" android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNameExpert"
                app:layout_constraintStart_toEndOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLike"
                app:layout_constraintStart_toEndOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/ivExpertTab"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleArticleExpert"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ivExpertTab"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvCategoryTitleExpert"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleArticleExpert" android:textSize="12sp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>