<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="10dp"
            tools:layout_editor_absoluteX="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@color/colorAccent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_width="2dp"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="MissingConstraints"
                android:id="@+id/ivExpertTab" tools:layout_editor_absoluteY="15dp"
                tools:layout_editor_absoluteX="15dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleExpert"
                app:layout_constraintTop_toTopOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/ivExpertTab"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameExpert" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleExpert" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/ivExpertTab"
                android:textStyle="bold" android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:id="@+id/tvTopicExpert" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNameExpert"
                app:layout_constraintStart_toEndOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLike"
                app:layout_constraintStart_toEndOf="@+id/ivExpertTab" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/ivExpertTab"
                android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>